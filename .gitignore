# ===================================
# .gitignore - SULUT NEWS HUB
# File/folder yang tidak perlu di-commit ke Git
# ===================================

# === Konfigurasi Lokal ===
config/db_local.php
*.env

# === Upload Files (jangan commit file upload user) ===
uploads/thumbnails/*
uploads/videos/*
# Tapi keep folder structure (keep README.md)
!uploads/thumbnails/README.md
!uploads/videos/README.md

# === Log Files ===
*.log
error_log
debug.log

# === Backup Database ===
*.sql.gz
*.sql.bak
backup/

# === Temporary Files ===
*.tmp
*.temp
*.cache
*.bak
*.swp
*~

# === Cache Files ===
cache/*
!cache/.gitkeep

# === OS Generated Files ===
.DS_Store
.DS_Store?
._*
.Spotlight-V100
.Trashes
ehthumbs.db
Thumbs.db
desktop.ini

# === IDE/Editor Files ===
.vscode/
.idea/
*.sublime-project
*.sublime-workspace

# === PHP Files ===
vendor/
composer.lock

# === Node Modules (jika pakai NPM nanti) ===
node_modules/
package-lock.json

# === Test Files ===
test_*.php
debug_*.php
